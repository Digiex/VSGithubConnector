<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Digiexnet.VSGithubConnectorPkg" x:Class="Digiexnet.VSGithubConnectorPkg.IssuesControl" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <StackPanel x:Name="loginPanel">
                <local:LoginControl x:Name="loginControl" LoggedIn="loginControl_LoggedIn"/>
            </StackPanel>
            <StackPanel x:Name="issuesPanel">
                <ListView Name="issueListView"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
