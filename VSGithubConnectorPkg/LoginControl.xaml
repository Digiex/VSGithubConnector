<UserControl x:Class="Digiexnet.VSGithubConnectorPkg.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             Name="MyToolWindow">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="10" HorizontalAlignment="Center">Github Issues</TextBlock>
            <Label Content="Username:"/>
            <TextBox Height="23" TextWrapping="Wrap" Name="usernameBox"/>
            <Label Content="Password:"/>
            <PasswordBox Height="23" Name="passwordBox"/>
            <Button Content="Login!" Click="loginButton_Click" Height="23" x:Name="loginButton"/>
        </StackPanel>
    </Grid>
</UserControl>
